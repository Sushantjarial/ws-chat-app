generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Room{
  id Int @id @default(autoincrement())
  slug String @unique
  adminId String
  createdAt DateTime @default(now())
  messages Message[]
  roomToken String @unique
}

model Message {
  id Int @id @default(autoincrement())
  roomId Int
  content String
  senderId String 
  createdAt DateTime @default(now())
  room Room @relation(fields: [roomId],references: [id])
}